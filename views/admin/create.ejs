<%- include("../includes/head.ejs")  %>
    <link rel="stylesheet" href="/css/create.css" >
</head>
<body>
    <%- include("../includes/header.ejs", {isAuth: isAuthenticated, user: user})%>
    <main>
        <%- include("../includes/sidebar.ejs") %>
        <section class="main">
            <% if(errMsg) {%>
                <p class="errorMsg" >
                    <%= errMsg %>
                </p>
            <% } %>
            <form method="post" action="/admin/createBlog" class="create-form" >
                <button type="submit" class="create-form-btn" ><%= title %> Post</button>
                <input type="text" placeholder="Post Title ....." class="post-title-input" name="title" value="<%= blogTitle %>" />
                <textarea class="post-content-input" name="content" placeholder="Enter blog content here!"><%= blogContent %></textarea>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            </form>
        </section>
    </main>
</body>